@model AssetViewModel

<div class="container">
    <h2>Assets</h2>

    <!-- 類別過濾按鈕 -->
    <div class="btn-group mb-3" role="group" aria-label="Category Filters">
        <a class="btn btn-secondary @(Model.SelectedCategory == null ? "active" : "")" asp-action="Index">All</a>
        @foreach (var category in Model.Categories)
        {
            <a class="btn btn-secondary @(Model.SelectedCategory == category ? "active" : "")" asp-action="Index" asp-route-category="@category">@category</a>
        }
    </div>

    <!-- 顯示資產 -->
    <div class="row">
        @if (Model.Assets.Any())
        {
            @foreach (var asset in Model.Assets)
            {
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <img src="@asset.ImageUrl" class="card-img-top" alt="@asset.Name" />
                        <div class="card-body">
                            <h5 class="card-title">@asset.Name</h5>
                            <p class="card-text">Category: @asset.Category</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p>No assets found.</p>
            </div>
        }
    </div>
</div>
